<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @doctor, :html => {:multipart => true} do |f| %>
      <% if @doctor.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@doctor.errors.count, "error") %> prohibited this doctor from being saved:</h2>

          <ul>
          <% @doctor.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>

        <%= f.fields_for :photos do |p| %>
          <div class="field">
            <%= p.label :photo %><br>
            <%= p.file_field :photo, :multiple => true, name: "photos[photo][]" %>
          </div>
        <% end %>

        <%= f.submit "Create new doctor", class: "btn btn-primary" %>

    <% end %>

    </div>
</div>