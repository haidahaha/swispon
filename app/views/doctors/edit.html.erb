<h1>Editing information</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @doctor, :html => {:multipart => true} do |f| %>
      <% if @doctor.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@doctor.errors.count, "error") %> prohibited this doctor from being saved:</h2>

          <ul>
          <% @doctor.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
