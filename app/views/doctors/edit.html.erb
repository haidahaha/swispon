  <div class="col-md-4 col-md-offset-4">
    <div class="row box top-buffer">
      <h3 class="text-center">Editing information</h1>
      <%= form_for @doctor, :html => {:multipart => true} do |f| %>
        <% if @doctor.errors.any? %>
          <div id="error_explanation">
