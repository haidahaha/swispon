<div class="container">
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3 top-buffer">

            <!-- ===== vCard Navigation ===== -->
            <div class="row w">
                <div class="col-md-4 top-buffer" id="avatar">
                    <% if @doctor.photo %>
                        <%= image_tag @doctor.photo_url.to_s, class: "img-responsive" %>
                    <% end %>
                    <!-- <img class="img-responsive" src="http://lorempixel.com/140/140/" alt=""> -->

                </div><!-- col-md-4 -->

                <!-- ===== vCard Content ===== -->
                <div class="col-md-8">
                    <div class="tab-content">

                      <!-- ===== First Tab ===== -->
                      <div class="tab-pane active" id="about">
                        <h3>Private Practice Dr. <%= @doctor.name %></h3>
                        <hr>
                        <h1>Welcome back!</h1>
                      </div><!-- tab about -->


                    </div><!-- Tab Content -->
                </div><!-- col-md-8 -->
            </div><!-- row w -->
        </div><!-- col-lg-6 -->
    </div>

      <div class="row">
          <div class="col-md-12 column top-buffer white-background">
            <div class="row w">
                <h3 class="text-center">
                  Unfinished Reports
                </h3>
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Patient ID</th>
                      <th>Report type</th>
                      <th>Date</th>
                      <th>Status</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if @reports %>
                        <% @reports.each do |report| %>
                          <tr class="<%= daysDiff(report.created_at) %>">
                            <td><%= report.patient %></td>
                            <td><%= report.rtype %></td>
                            <td><%= report.created_at.strftime("%B %d %I:%M %p") %></td>
                            <td>
                              <div class="progress">
                                <div class="progress-bar" role="progressbar" aria-valuenow="1" aria-valuemin="0" aria-valuemax="3" style="width: 30%;">
                                  1 / 3
                                </div>
                              </div>
                            </td>
                            <td><%= link_to "Edit", report, class: "btn btn-info" %></td>
                          </tr>
                        <% end %>
                    <% end %>
                  </tbody>
                </table>
            </div>
          </div>
        </div>
</div><!-- /.container -->