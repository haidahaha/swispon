<div class="row">
  <div class="col-xs-6">
    <strong>Name:</strong>
    <%= @doctor.name %>
  </div>
</div>

<div class="row">
    <div class="col-xs-4">
        <%= form_for @doctor, url: upload_photos_path, html: {:multipart => true, class: "input-group"} do |f| %>
            <%= f.file_field :photos, :multiple => true, name: "photos[photo][]", class: "form-control" %>
            <span class="input-group-btn">
                <%= f.submit "Upload photos", class: "btn btn-primary" %>
            </span>
        <% end %>
    </div>
    <div class="col-xs-2">
        <%= button_to "Delete All Photos", destroy_photos_path(@doctor), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"} %>
    </div>
</div>

<div class="container">
    <div class="row">
        <% @photos.each do |photo| %>
            <div class="col-xs-3 text-center photos">
                    <%= image_tag photo.photo_url.to_s %><br>

                    <%= link_to "Delete Photo", destroy_photo_path(photo), method: :delete, data: {confirm: "Are you sure?"} %>

            </div>
        <% end %>
    </div>
</div>





<div class="holder">
  <audio id="myAudio" controls>
    <source src="/audio/AllOutOfLove.mp3" type='audio/mpeg' />
  </audio>

  <form>
    <input id="pbr" type="range" value="1"
                    min="0.5" max="4" step="0.1" >
    <p>Playback Rate <span id="currentPbr">1</span></p>
  </form>

  <%= form_for @doctor, url: create_note_path, html: {class: "input-group"} do |f| %>
      <%= f.text_area :note, content: @doctor.note, cols: 3, class: "form-control" %>
      <%= f.submit "Save note", class: "btn btn-primary" %>
  <% end %>
</div>

