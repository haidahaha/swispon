<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column top-buffer ">
            <h3 class="text-center">
                Transcription
            </h3>

            <div class="row">
                <div class="col-md-6 col-md-offset-3 column top-buffer">
                  <%= form_for @record, url: create_note_path, html: {class: "input-group"} do |f| %>
                      <%= f.text_area :note, content: @record.note, cols: 80, rows: 20, class: "form-control" %>
                      <%= f.hidden_field :transcribed, value: true %>
                      <%= f.submit "Submit", class: "btn btn-primary top-buffer" %>
                  <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

