<h2>Photos</h2>
<div class="row">
    <div class="col-xs-4">
        <%= form_for @report, url: upload_photos_path, html: {:multipart => true, class: "input-group"} do |f| %>
            <%= f.file_field :photos, :multiple => true, name: "photos[photo][]", class: "form-control" %>
            <span class="input-group-btn">
                <%= f.submit "Upload photos", class: "btn btn-primary" %>
            </span>
        <% end %>
    </div>
    <div class="col-xs-2">
        <%= button_to "Delete All Photos", destroy_photos_path(@report), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"} %>
    </div>
</div>

<div class="container">
    <div class="row">
      <% if @photos %>
        <% @photos.each do |photo| %>
            <div class="col-xs-3 text-center photos">
                    <%= image_tag photo.photo_url.to_s %><br>
                    <%= link_to "Delete Photo", destroy_photo_path(photo), method: :delete, data: {confirm: "Are you sure?"} %>
            </div>
        <% end %>
      <% end %>
    </div>
</div>


<h2>Records</h2>
<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Length</th>
      <th>Transcribed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @records.each do |record| %>
        <tr>
          <td><%= record.rtype %></td>
          <td><%= record.length %></td>
          <td><%= record.transcribed %></td>
          <td><%= link_to 'Listen', record %></td>
        </tr>
      <% end %>
  </tbody>
</table>